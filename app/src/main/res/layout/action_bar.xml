<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    android:elevation="5dp"
    app:contentInsetStartWithNavigation="0dp"
    android:gravity="center_vertical"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tool_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/default_selector_light"
            android:clickable="true"
            android:src="@drawable/back" />

        <com.kepler.brandde.support.CustomTextView
            android:id="@+id/toolbar_title"
            style="@style/TextStyle_Dark_LARGE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:textSize="@dimen/size_unicode_charector"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/app_name" />


        <ImageView
            android:id="@+id/tool_bar_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/default_selector_light"
            android:clickable="true"
            android:src="@drawable/search" />


    </LinearLayout>

</android.support.v7.widget.Toolbar>